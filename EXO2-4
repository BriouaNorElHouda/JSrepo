function   ToggleButton() {
  const [toggle, setToggle] = useState(false)
  return (
    <>
      <button 
            onClick={() => setToggle(!toggle)} 
           >
          Toggle Button
      </button>
      {toggle && (
         <h1 style={{color: "red"}}>
          Clicked
         </h1>
      )}
      {!toggle && (
         <h1 style={{color: "red"}}>
         Not Clicked
         </h1>
      )}
    </>
  )
}
export default  ToggleButton;
